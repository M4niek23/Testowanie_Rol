@using Fleet_Managment_Production.Models;
@model IEnumerable<Vehicle>

@{
    ViewData["Title"] = "Lista Pojazdów";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-car-front-fill"></i> @ViewData["Title"]</h1>
    <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm">
        <i class="bi bi-plus-circle-fill"></i> Dodaj nowy pojazd
    </a>
</div>

<div class="card shadow-sm rounded">
    <table class="table table-striped table-hover mb-0">

        <thead class="table-dark">
            <tr>
                <th>
                    Pojazd (Marka / Model)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LicensePlate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductionYear)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User)
                </th>
                <th style="width: 200px;">
                    Akcje
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <strong>@Html.DisplayFor(modelItem => item.Make)</strong>
                        <div>@Html.DisplayFor(modelItem => item.Model)</div>
                    </td>
                    <td>
                        <span class="badge bg-dark fs-6">@Html.DisplayFor(modelItem => item.LicensePlate)</span>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductionYear)
                    </td>

                    <td>
                        @{
                            string badgeClass = "bg-secondary";

                            switch (item.Status.ToString())
                            {
                                case "Available":
                                    badgeClass = "bg-success"; 
                                    break;
                                case "InUse":
                                    badgeClass = "bg-primary"; 
                                    break;
                                case "InMaintenance":
                                    badgeClass = "bg-warning"; 
                                    break;
                                case "Sold":
                                    badgeClass = "bg-danger";
                                    break;
                                case "Decommissioned":
                                    badgeClass = "bg-danger"; 
                                    break;
                            }
                        }

                        <span class="badge @badgeClass fs-6">
                            @Html.DisplayFor(modelItem => item.Status)
                        </span>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.Email)
                    </td>
                    <td>
                        <div class="btn-group btn-group-sm" role="group">
                            <a asp-action="Edit" asp-route-id="@item.VehicleId" class="btn btn-outline-primary">
                                <i class="bi bi-pencil-fill"></i> Edytuj
                            </a>
                            <a asp-action="Details" asp-route-id="@item.VehicleId" class="btn btn-outline-info">
                                <i class="bi bi-eye-fill"></i> Detale
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.VehicleId" class="btn btn-outline-danger">
                                <i class="bi bi-trash-fill"></i> Usuń
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>