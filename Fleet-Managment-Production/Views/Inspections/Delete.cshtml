@model Fleet_Managment_Production.Models.Inspection

@{
    ViewData["Title"] = "Usuń przegląd";
}

<h1>Usuń przegląd</h1>

<h3 class="text-danger">Czy na pewno chcesz usunąć ten wpis?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Vehicle)</dt>
        <dd class="col-sm-9">@(Model.Vehicle?.LicensePlate ?? "Brak pojazdu")</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.InspectionDate)</dt>
        <dd class="col-sm-9">@Model.InspectionDate.ToShortDateString()</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
    </form>
</div>