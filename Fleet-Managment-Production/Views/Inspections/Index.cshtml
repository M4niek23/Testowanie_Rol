@model Fleet_Managment_Production.ViewModels.InspectionsViewModel

@{
    ViewData["Title"] = "Przeglądy";
}

<h1>Przeglądy</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Dodaj nowy przegląd</a>
</p>

<ul class="nav nav-tabs" id="inspectionTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="upcoming-tab" data-bs-toggle="tab" data-bs-target="#upcoming" type="button" role="tab" aria-controls="upcoming" aria-selected="true">
            Nadchodzące (@Model.UpcomingInspections.Count)
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="history-tab" data-bs-toggle="tab" data-bs-target="#history" type="button" role="tab" aria-controls="history" aria-selected="false">
            Wykonane (@Model.HistoricalInspections.Count)
        </button>
    </li>
</ul>

<div class="tab-content" id="inspectionTabsContent">

    <div class="tab-pane fade show active" id="upcoming" role="tabpanel" aria-labelledby="upcoming-tab">
        <table class="table table-striped mt-3">
            <thead>
                <tr>
                    <th>Pojazd</th>
                    <th>Data przeglądu</th>
                    <th>Opis</th>
                    <th>Akcje</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.UpcomingInspections)
                {
                    <tr>
                        <td>@(item.Vehicle?.LicensePlate ?? "Brak pojazdu")</td>
                        <td>@item.InspectionDate.ToShortDateString()</td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edytuj</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Szczegóły</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Usuń</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="tab-pane fade" id="history" role="tabpanel" aria-labelledby="history-tab">
        <table class="table table-striped mt-3">
            <thead>
                <tr>
                    <th>Pojazd</th>
                    <th>Data przeglądu</th>
                    <th>Przebieg (km)</th>
                    <th>Koszt (PLN)</th>
                    <th>Wynik</th>
                    <th>Data ponownego</th>
                    <th>Akcje</th>
                </tr>
            </thead>
            <tbody>
                
                @foreach (var item in Model.HistoricalInspections)
                {

                    string resultText = "Oczekujący";
                    string resultClass = "text-muted";
                    if (item.IsResultPositive == true)
                    {
                        resultText = "Pozytywny";
                        resultClass = "text-success fw-bold";
                    }
                    else if (item.IsResultPositive == false)
                    {
                        resultText = "Negatywny";
                        resultClass = "text-danger fw-bold";
                    }

                    <tr>
                        <td>@(item.Vehicle?.LicensePlate ?? "Brak pojazdu")</td>
                        <td>@item.InspectionDate.ToShortDateString()</td>
                        <td>@Html.DisplayFor(modelItem => item.Mileage)</td>
                        <td>@Html.DisplayFor(modelItem => item.Cost)</td>
                        <td class="@resultClass">@resultText</td>
                        <td>
                            @if (item.NextInspectionDate.HasValue)
                            {
                                <span class="text-danger">@item.NextInspectionDate.Value.ToShortDateString()</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edytuj</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Szczegóły</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Usuń</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>