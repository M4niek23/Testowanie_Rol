@using Fleet_Managment_Production.Models;
@model IEnumerable<Insurance>

@{
    ViewData["Title"] = "Index";
}

<h1>Ubezpieczenia</h1>
<p>
    <a asp-action="Create" class="btn btn-primary" asp-route-vehicleId="@ViewBag.VehicleId">Dodaj nowe ubezpieczenie</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PolicyNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InsurareName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model =>model.ExpiryDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HasOc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AcScope)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HasAssistance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HasNNW)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsCurrent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vehicle)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PolicyNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InsurareName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpiryDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HasOc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AcScope)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HasAssistance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HasNNW)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsCurrent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vehicle.Make)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
