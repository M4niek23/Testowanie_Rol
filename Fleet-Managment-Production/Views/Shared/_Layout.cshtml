<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Fleet-Managment-Production.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-light bg-white border-bottom">
            <div class="container-fluid">
                <div class="d-flex align-items-center gap-2">
                    <button class="navbar-toggler d-md-none" type="button"
                            data-bs-toggle="offcanvas" data-bs-target="#sidebarOffcanvas"
                            aria-controls="sidebarOffcanvas" aria-label="Open menu">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <button id="sidebarToggle" class="btn btn-outline-secondary d-none d-md-inline-flex"
                            type="button" aria-label="Toggle sidebar" title="Toggle sidebar">
                        ☰
                    </button>

                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        Fleet-Managment
                    </a>
                </div>

                <div class="ms-auto d-flex align-items-center">
                    <partial name="_LoginPartial"/>
                </div>
            </div>
        </nav>
    </header>

    @{
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    }

    <div class="app-wrap d-none d-md-flex">
        <aside class="sidebar bg-light border-end">
            <nav class="nav flex-column py-3">
                <a class="nav-link px-3" asp-area="" asp-controller="Home" asp-action="Index" title="Home">
                    <span class="link-text">Dashboard</span>
                </a>

                <a class="nav-link px-3" data-bs-toggle="collapse" href="#fleetSubmenuDesktop" role="button" aria-expanded="false" aria-controls="fleetSubmenuDesktop">
                    <span class="link-text">Moja Flota</span>
                </a>
                <div class="collapse" id="fleetSubmenuDesktop">
                    <nav class="nav flex-column ps-4">
                        <a class="nav-link px-3 @(currentController == "Vehicles" ? "active" : "")" asp-area="" asp-controller="Vehicles" asp-action="Index" title="Vehicles">
                            <span class="link-text">Flota</span>
                        </a>
                        <a class="nav-link px-3 @(currentController == "Insurance" ? "active" : "")" asp-area="" asp-controller="Insurance" asp-action="Index" title="Insurances">
                            <span class="link-text">Ubezpieczenia</span>
                        </a>
                        <a class="nav-link px-3 @(currentController == "Inspections" ? "active" : "")" asp-area="" asp-controller="Inspections" asp-action="Index" title="Inspections">
                            <span class="link-text">Przeglądy</span>
                        </a>
                    </nav>
                </div>

                <a class="nav-link px-3 @(currentController == "Costs" ? "active" : "")" asp-area="" asp-controller="Costs" asp-action="Index" title="Costs">
                    <span class="link-text">Koszty</span>
                </a>

                @if (User.IsInRole("Admin"))
                {
                    <a class="nav-link px-3 @(currentController == "Admin" ? "active" : "")" asp-area="" asp-controller="Admin" asp-action="Index" title="Manage Roles">
                        <span class="link-text">Zarządzanie rolami</span>
                    </a>
                }

            </nav>
        </aside>

        <main class="content flex-grow-1 px-3 py-3">
            @RenderBody()
        </main>
    </div>

    <div class="offcanvas offcanvas-start d-md-none" tabindex="-1" id="sidebarOffcanvas" aria-labelledby="sidebarOffcanvasLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="sidebarOffcanvasLabel">Menu</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body p-0">
            <nav class="nav flex-column py-2">
                <a class="nav-link px-3" asp-area="" asp-controller="Home" asp-action="Index" data-bs-dismiss="offcanvas">Dashboard</a>

                <a class="nav-link px-3" data-bs-toggle="collapse" href="#fleetSubmenuMobile" role="button" aria-expanded="false" aria-controls="fleetSubmenuMobile">
                    Moja Flota
                </a>
                <div class="collapse" id="fleetSubmenuMobile">
                    <nav class="nav flex-column ps-4">
                        <a class="nav-link px-3 @(currentController == "Vehicles" ? "active" : "")" asp-area="" asp-controller="Vehicles" asp-action="Index" data-bs-dismiss="offcanvas">Flota</a>
                        <a class="nav-link px-3 @(currentController == "Insurance" ? "active" : "")" asp-area="" asp-controller="Insurance" asp-action="Index" data-bs-dismiss="offcanvas">Ubezpieczenia</a>
                        <a class="nav-link px-3 @(currentController == "Inspections" ? "active" : "")" asp-area="" asp-controller="Inspections" asp-action="Index" data-bs-dismiss="offcanvas">Przeglądy</a>
                    </nav>
                </div>

                <a class="nav-link px-3 @(currentController == "Costs" ? "active" : "")" asp-area="" asp-controller="Costs" asp-action="Index" data-bs-dismiss="offcanvas">Koszty</a>
                @if (User.IsInRole("Admin"))
                {
                    <a class="nav-link px-3 @(currentController == "Admin" ? "active" : "")" asp-area="" asp-controller="Admin" asp-action="Index" data-bs-dismiss="offcanvas">Zarządzanie rolami</a>
                }

            </nav>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Sidebar collapse (desktop) + zapamiętanie stanu
        (function () {
            const key = 'sidebar-collapsed';
            const body = document.body;
            const btn = document.getElementById('sidebarToggle');

            // Przywróć stan
            if (localStorage.getItem(key) === '1') body.classList.add('sidebar-collapsed');

            if (btn) {
                btn.addEventListener('click', function () {
                    body.classList.toggle('sidebar-collapsed');
                    localStorage.setItem(key, body.classList.contains('sidebar-collapsed') ? '1' : '0');
                });
            }
        })();

        // Fleet Submenu collapse state management
        (function () {
            const storageKey = 'fleet-menu-open';
            const desktopSubmenuEl = document.getElementById('fleetSubmenuDesktop');
            const mobileSubmenuEl = document.getElementById('fleetSubmenuMobile');
            const desktopToggleEl = document.querySelector('a[href="#fleetSubmenuDesktop"]');
            const mobileToggleEl = document.querySelector('a[href="#fleetSubmenuMobile"]');

            const restoreState = () => {
                if (localStorage.getItem(storageKey) === '1') {
                    if (desktopSubmenuEl) {
                        desktopSubmenuEl.classList.add('show');
                        desktopToggleEl?.setAttribute('aria-expanded', 'true');
                    }
                    if (mobileSubmenuEl) {
                        mobileSubmenuEl.classList.add('show');
                        mobileToggleEl?.setAttribute('aria-expanded', 'true');
                    }
                }
            };

            const saveState = (isOpen) => {
                localStorage.setItem(storageKey, isOpen ? '1' : '0');
            };

            if (desktopSubmenuEl) {
                desktopSubmenuEl.addEventListener('show.bs.collapse', () => saveState(true));
                desktopSubmenuEl.addEventListener('hide.bs.collapse', () => saveState(false));
            }
            if (mobileSubmenuEl) {
                mobileSubmenuEl.addEventListener('show.bs.collapse', () => saveState(true));
                mobileSubmenuEl.addEventListener('hide.bs.collapse', () => saveState(false));
            }

            restoreState();
        })();
    </script>
    @await RenderSectionAsync("Scripts", false)
</body>
</html>