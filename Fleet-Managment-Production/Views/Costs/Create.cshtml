@model Fleet_Managment_Production.Models.Cost
@using Fleet_Managment_Production.Models

@{
    ViewData["Title"] = "Dodaj Koszt";
}

<h1>Dodaj Koszt</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="VehicleId" class="control-label">Pojazd</label>
                <select asp-for="VehicleId" class="form-control" asp-items="ViewBag.VehicleId">
                    <option value="">-- Wybierz pojazd --</option>
                </select>
                <span asp-validation-for="VehicleId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Type" class="control-label">Typ kosztu</label>
                <select asp-for="Type" class="form-control" asp-items="ViewBag.CostType">
                    <option value="">-- Wybierz typ kosztu --</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Opis" class="control-label"></label>
                <input asp-for="Opis" class="form-control" />
                <span asp-validation-for="Opis" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Kwota" class="control-label"></label>
                <input asp-for="Kwota" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="Kwota" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" type="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Utwórz" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Powrót do listy</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}